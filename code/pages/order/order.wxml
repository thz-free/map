<!--pages/order/order.wxml-->
<view class="head">
  <view class="function">
   <text class="font" bindtap="dn" data-id="2">代拿</text>
  </view>
  <view class="function">
    <text class="font"  bindtap="dn" data-id="1">代购</text>
  </view >
  <view class="function">
    <text class="font"  bindtap="dn" data-id="0">代办</text>
  </view>
</view>
<view class="container_1">
     <!-- 分割线 -->
  <view class="divLine"></view>
</view>
<!--订单列表-->
<view id='order-list'>
  <view wx:if="{{listLength==0}}">
    <text>暂无</text>
  </view>
  <view class="list-item" wx:for="{{orderList}}" wx:for-item="order" wx:key="order.id" >
    <text class="order-title" bindtap="goToDetail" data-id='{{index}}' data-orderid="{{order.id}}">{{order.title}}</text>
  </view>
</view>
